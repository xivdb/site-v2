<p class="fr fs12 light">{{ languages.custom[903] }}</p>

<div class="quest-todo-spoiler quest-spoilers-alert">
    <div class="fs24">{{ languages.custom[904] }}</div>
    <span class="fs16">{{ languages.custom[905] }}</span>
</div>

<div class="quest-todo-spoilers quest-todo-box quest-spoilers">
{% for todo in content.text.todo %}
    <div class="tc-quest-todo">
        <div>
            <i class="fa fa-dot-circle-o pink"></i>
            <i class="fa fa-check green" style="display:none;"></i>
        </div>
        <div class="text">
            {% if todo.text is defined %}
                {{ todo.text }}
            {% endif %}
            {% if todo.qib is defined %}
            <div class="cf {% if todo.text is defined %}p5{% endif %}">
                {% if todo.text is defined %}
                    <div class="b5"><i class="fa fa-long-arrow-right light"></i></div>
                {% endif %}
                <div class="b95 pt4">{{ todo.qib.text }}</div>
            </div>
            {% endif %}
        </div>
    </div>
{% endfor %}
</div>
<script>
$('.quest-todo-spoiler').on('click', function() {
    $(this).hide();
    $('.quest-todo-spoilers').show();
});
$('.quest-todo-box .tc-quest-todo').on('click', function() {
    $(this).toggleClass('completed');

    if ($(this).hasClass('completed')) {
        $(this).find('.fa-dot-circle-o').hide();
        $(this).find('.fa-check').show();
    } else {
        $(this).find('.fa-dot-circle-o').show();
        $(this).find('.fa-check').hide();
    }
})
</script>
